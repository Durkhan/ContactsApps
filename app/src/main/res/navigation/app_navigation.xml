<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/contactList"
    android:id="@+id/app_navigation">
    <fragment android:name="com.vholodynskyi.assignment.ui.contactslist.ContactsListFragment" android:id="@+id/contactList">
        <action
            android:id="@+id/action_contactList_to_details"
            app:destination="@id/details">

        </action>
    </fragment>
    <fragment android:name="com.vholodynskyi.assignment.ui.details.DetailsFragment" android:id="@+id/details">
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_details_to_contactList1"
            app:destination="@id/contactList" />
    </fragment>
</navigation>
